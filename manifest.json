{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.3.0",
  "default_locale": "zh_CN",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "__MSG_actionTitle__",
    "default_icon": {
      "16": "src/icons/icon128.png",
      "48": "src/icons/icon128.png",
      "128": "src/icons/icon128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon128.png",
    "48": "src/icons/icon128.png",
    "128": "src/icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "downloads",
    "downloads.shelf",
    "downloads.open",
    "storage",
    "notifications",
    "contextMenus",
    "alarms",
    "tabs"
  ],
  "commands": {
    "clear-completed": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "__MSG_commandClearCompleted__"
    },
    "clear-failed": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "__MSG_commandClearFailed__"
    }
  },
  "options_page": "src/options/options.html"
}
